---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";

const games = await getCollection("games");
---

{
  games.map((game) => (
    <div class="rounded-2xl overflow-hidden ">
      <div class="max-w-full block">
        <Image src={game.data.image} alt={game.data.alt} />
      </div>
      <p class="py-4 text-2xl text-center block bg-slate-300">
        {game.data.name}
      </p>
    </div>
  ))
}
